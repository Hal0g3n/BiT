<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">

    <slide
        android:duration="@integer/config_navAnimTime"
        android:slideEdge="top">

        <targets>
            <target android:targetId="@+id/tool_bar"/>
        </targets>

    </slide>

    <fade android:fadingMode="fade_out" android:duration="@integer/config_navAnimTime" />
    <changeBounds />
    <fade android:fadingMode="fade_in" android:duration="@integer/config_navAnimTime" />
</transitionSet>